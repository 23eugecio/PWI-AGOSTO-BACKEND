<h1>Formulario de producto</h1>


<form action="/products/new" method="POST">
    <div>
        <label for="nombre">Nombre:</label>
        <input id="nombre" name="nombre" placeholder="Escribe el nombre del producto..." onchange="validateInput()"
            value="{{this.data.form_state.product.nombre}}" />
        {{#if this.data.errors.nombre}}
        <span>{{this.data.nombre}}</span>
        {{/if}}
    </div>
    <div>
        <label for="precio">Precio:</label>
        <input id="precio" name="precio" placeholder="Escribe el precio del producto..." onchange="validateInput()"
            value="{{this.data.form_state.product.precio}}" />
        {{#if this.data.errors.precio}}
        <span>{{this.data.precio}}</span>
        {{/if}}
    </div>
    <div>
        <label for="stock">Stock:</label>
        <input id="stock" name="stock" placeholder="Escribe el nombre del producto..." onchange="validateInput()"
            value="{{this.data.form_state.product.stock}}" />
        {{#if this.data.errors.stock}}
        <span>{{this.data.stock}}</span>
        {{/if}}
        <div>
            <label for="descripcion">Descripcion:</label>
            <textarea id="descripcion" name="descripcion" placeholder="Escriba la descripcion del producto..."
                value="{{this.data.form_state.product.descripcion}}">
        </textarea>
        </div>
        <input type="Submit">
</form>

<script src="/js/form-validation.js"></script>